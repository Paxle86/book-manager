extends ../layout/common.pug 
block content
    h1 Create new user
    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="POST")
        label Name
        input(name="name",type="text", value=values ? values.name : "")
        br
        label Phone number
        input(name="phone",type="text", value=values ? values.phone : "")
        br
        button Create